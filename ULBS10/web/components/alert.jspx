<?xml version="1.0" encoding="UTF-8"?>

<jsp:root
    xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:c="http://java.sun.com/jsp/jstl/core"
    version="2.0">

    <c:if test="${appAlert != null}">
        <div class="alert ${appAlert[1]} mt-lg-5 alert-app">${appAlert[0]}</div>
        ${appAlert = null}
    </c:if>

</jsp:root>
